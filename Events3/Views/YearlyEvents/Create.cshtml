@model Events3.ViewModels.YearlyEventsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>YearlyEventsViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SpecialEvents" class="control-label"></label>
                <select asp-for="SpecialEvents" class="form-control"
                        asp-items="Html.GetEnumSelectList<SpecialEvents>()"></select>
                <span asp-validation-for="SpecialEvents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Months" class="control-label"></label>
                <select asp-for="Months" class="form-control"
                        asp-items="Html.GetEnumSelectList<Months>()"></select>
                <span asp-validation-for="Months" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parshios" class="control-label"></label>
                <select asp-for="Parshios" class="form-control"
                        asp-items="Html.GetEnumSelectList<Parshios>()"></select>
                <span asp-validation-for="Parshios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary" 
                 onclick="window.location.href='<%= Url.Action("Index","YearlyEvents")'" %>
                 Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
